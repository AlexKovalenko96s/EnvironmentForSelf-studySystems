<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="475.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.kas.main.ControllerCreateNew">
   <children>
      <Label layoutX="161.0" layoutY="14.0" text="Create new scene ">
         <font>
            <Font name="Times New Roman Bold Italic" size="24.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="74.0" prefHeight="14.0" prefWidth="178.0" text="Select the language of the logic file:">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font></Label>
      <Label layoutX="81.0" layoutY="110.0" prefHeight="17.0" prefWidth="116.0" text="Select storage system:">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font></Label>
      <ComboBox fx:id="comB_language" layoutX="198.0" layoutY="69.0" onAction="#resetStorageFile" prefWidth="150.0" promptText="logic file" />
      <ComboBox fx:id="comB_storage" layoutX="198.0" layoutY="106.0" onMouseClicked="#selectStorageFile" prefWidth="150.0" promptText="storage file" />
      <Button layoutX="198.0" layoutY="139.0" mnemonicParsing="false" onAction="#confirm" prefHeight="47.0" prefWidth="261.0" text="Confirm">
         <font>
            <Font name="Times New Roman" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btn_selectLanguage" layoutX="360.0" layoutY="69.0" mnemonicParsing="false" onAction="#selectLocation" prefHeight="25.0" prefWidth="98.0" text="Select file">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </Button>
      <Button fx:id="btn_selectStorage" layoutX="360.0" layoutY="106.0" mnemonicParsing="false" onAction="#selectLocation" prefHeight="25.0" prefWidth="98.0" text="Select storage">
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
